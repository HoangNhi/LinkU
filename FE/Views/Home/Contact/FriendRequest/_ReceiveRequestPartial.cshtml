@model List<MODELS.FRIENDREQUEST.Dtos.MODELFriendRequest>
@{
    string BEUrl = ViewBag.BEUrl;
}

<span class="mb-3">Lời mời đã nhận@(Model.Count > 0 ? $" ({Model.Count})" : "")</span>

@if (Model.Count > 0)
{
    <div class="mt-3 row">
        @foreach(var req in Model)
        {
            <div class="col-md-4 p-2">
                @* Header *@
                <div>
                    <img src="@(BEUrl + req.User.ProfilePicture)" width="20" />
                    <div>
                        <span>@req.User.HoVaTen</span>
                        <span>@(req.Duration > 0 ? req.Duration : "")</span>
                    </div>
                    <button>

                    </button>
                </div>
            </div>
        }   
    </div>
}


