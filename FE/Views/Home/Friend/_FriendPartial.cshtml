<div class="card text-center flex-grow-1">
    <div class="card-header d-flex justify-content-between"
         style="padding: 10px 12px; box-shadow: rgba(0, 0, 0, 0.2) 0px 0px 4px 0px; border: 0">
        <div class="d-flex">
            <img class="rounded-circle"
                 style="margin: 6px"
                 width="36" height="36"
                 src='@(ViewBag.BeURL + "/Files/Common/NoPicture.png")' />
            <div class="d-flex align-items-center"
                 style="padding: 6px 6px 6px 2px; color: rgb(5,5,5); font-size: 15px; font-weight: 500; line-height: 20px">
                <span style="text-align: start">Lời mời kết bạn</span>
            </div>
        </div>
        <div class="d-flex">
            <button type="button"
                    class="btn btn-link rounded-circle position-relative"
                    style="margin: 6px; height: 36px; width: 36px; padding: 0"
                    data-mdb-ripple-init
                    data-mdb-ripple-color="dark">
                <i class="fa-solid fa-phone position-absolute"
                   style="color: #473c38;
                          font-size: 18px;
                          top: 50%;
                          left: 50%;
                          transform: translate(-50%, -50%);"></i>
            </button>
            <button type="button"
                    class="btn btn-link rounded-circle position-relative"
                    style="margin: 6px; height: 36px; width: 36px; padding: 0"
                    data-mdb-ripple-init
                    data-mdb-ripple-color="dark">
                <i class="fa-solid fa-video position-absolute"
                   style="color: #473c38;
                          font-size: 18px;
                          top: 50%;
                          left: 50%;
                          transform: translate(-50%, -50%);"></i>
            </button>
            <button type="button"
                    class="btn btn-link rounded-circle position-relative"
                    style="margin: 6px; height: 36px; width: 36px; padding: 0"
                    data-mdb-ripple-init
                    data-mdb-ripple-color="dark">
                <i class="fa-solid fa-ellipsis position-absolute"
                   style="color: #473c38;
                          font-size: 18px;
                          top: 50%;
                          left: 50%;
                          transform: translate(-50%, -50%);"></i>
            </button>
        </div>
    </div>
    <div class="card-body p-0">
        @* Kết bạn - START *@
        <div class="bg-body-secondary rounded-4"
             style="margin: 8px;
                    padding: 8px 14px;
                    display: flex;
                    color: black;
                    justify-content: space-between;
                    align-items: center;
                    box-shadow: rgba(9, 30, 66, 0.25) 0px 4px 8px -2px, rgba(9, 30, 66, 0.08) 0px 0px 0px 1px;">
            <span style="font-size: 14px;
                         font-weight: 400;
                         text-align: start">
                <i class="fa-solid fa-user-plus" style="padding-right: 4px"></i>
                Gửi yêu cầu kết bạn tới người này
            </span>
            <button type="button"
                    class="btn btn-light bg-white"
                    style="text-transform: unset;
                           font-size: 14px;
                           font-weight: 700;
                           padding: 4px 12px;
                           color: black"
                    data-mdb-ripple-init
                    data-mdb-ripple-color="dark">
                Gửi kết bạn
            </button>
        </div>
        @* Kết bạn - END *@
    </div>
    <div class="card-footer d-flex border-0"
         style="padding: 12px 8px">
        <button type="button"
                class="btn btn-link rounded-circle position-relative align-self-end"
                style="margin: 6px; height: 36px; width: 36px; padding: 0"
                data-mdb-ripple-init
                data-mdb-ripple-color="dark">
            <i class="fa-solid fa-image position-absolute"
               style="color: #473c38;
              font-size: 18px;
              top: 50%;
              left: 50%;
              transform: translate(-50%, -50%);"></i>
        </button>
        <div style="padding: 12px;
                    background-color: rgba(134, 142, 153, 0.1);
                    border-radius: 20px;
                    width: calc(100% - 96px);
                    align-content: center">
            <div id="Message_Content"
                 contenteditable="true"
                 data-placeholder="Aa"
                 style="color: rgb(5,5,5);
                        font-size: .9375rem;
                        line-height: 1.34;
                        text-align: left;
                        font-weight: 400;
                        border: 0;
                        outline: 0;
                        max-height: 140px;
                        align-content: center;
                        overflow-y: auto;
                        overflow-x: hidden"></div>
        </div>
        <button type="button"
                class="btn btn-link rounded-circle position-relative align-self-end"
                style="margin: 6px; height: 36px; width: 36px; padding: 0"
                data-mdb-ripple-init
                data-mdb-ripple-color="dark">
            <i class="fa-solid fa-paper-plane position-absolute"
               style="color: #473c38;
                      font-size: 18px;
                      top: 50%;
                      left: 50%;
                      transform: translate(-50%, -50%);"></i>
        </button>
    </div>
</div>
